<%= form_for @portfolio do |f| %>
  <% if @portfolio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@portfolio.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

      <ul>
      <% @portfolio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-style-8">
  <h2>Please Fill Out The Form Below</h2>
  <form>
    <div class="field">
      Name<br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      Description<br>
      <%= f.text_field :description %>
    </div>
    <div class="field">
      Start-time<br>
      <%= f.date_field :start_time %>
    </div>
    <div class="field">
      End-time<br>
      <%= f.date_field :end_time %>
    </div>

    <% i = 0 %>
      <%= f.fields_for :holdings do |ff| %>
      <div class="form-divider">
        <div class="field">
          Symbol<br>
          <%= ff.text_field :symbol, :value => @selections[i].symbol %>
        </div>
        <div class="field">
          Allocation<br>
          <%= ff.number_field :allocation, :value => 0 %>
        </div>
      </div>
        <%# if ff.object.persisted? %>
          <%#= ff.check_box :_destroy %>
          <%#= ff.label :_destroy, "Destroy" %>
        <%# end %>
      <% i += 1 %>
    <% end %>
  </form>
  <div class="container-fluid">
    <%= button_to 'Back', portfolios_path, :method => "get", :class => "btn btn-primary btn-sm" %>
    <%= f.submit 'Create', :class => "btn btn-primary btn-sm" %>
  </div>
<% end %>


<script type="text/javascript">
//auto expand textarea
function adjust_textarea(h) {
    h.style.height = "20px";
    h.style.height = (h.scrollHeight)+"px";
}
</script>
