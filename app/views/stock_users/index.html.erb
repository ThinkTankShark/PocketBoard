<p id="notice"><%= notice %></p>

<h1>Listing Stock Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stock_users.each do |stock_user| %>
      <tr>
        <td><%= stock_user.user %></td>
        <td><%= stock_user.stock %></td>
        <td><%= link_to 'Show', stock_user %></td>
        <td><%= link_to 'Edit', edit_stock_user_path(stock_user) %></td>
        <td><%= link_to 'Destroy', stock_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

